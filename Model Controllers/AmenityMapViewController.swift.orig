    func format(amenityType: String) -> String {
        let formattedString = amenityType.replacingOccurrences(of: "_", with: " ")
        
        switch formattedString {
        case "car repair":
            return "car repair shops"
        case "store":
            return "propane services"
        case "supermarket":
            return "stores"
        case "gas station":
            return "gas stations"
        default:
            return formattedString
        }
    }
    
